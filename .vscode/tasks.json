{
    "version": "2.0.0",
    "inputs": [
        {
            "id": "buildType",
            "type": "pickString",
            "description": "Select build type and compiler/platform",
            "options": [
                {"label": "Release (Default)", "value": "default"},
                {"label": "Release (Linux GCC)", "value": "linux-gcc"},
                {"label": "Release (Linux Clang)", "value": "linux-clang"},
                {"label": "Release (MSYS2 GCC)", "value": "msys2-gcc"},
                {"label": "Release (MSYS2 Clang)", "value": "msys2-clang"},
                {"label": "Release (MSVC Clang-CL)", "value": "msvc-clang-cl"},
                {"label": "Debug (Default)", "value": "debug"},
                {"label": "Reproducible (Default)", "value": "reproducible"},
                {"label": "Host Tests (Default)", "value": "host-tests"}
            ]
        },
        {
            "id": "buildOptions",
            "type": "pickString",
            "description": "Select build options",
            "options": [
                {"label": "Full Build", "value": ""},
                {"label": "Clean Build", "value": "--clean"},
                {"label": "Package Only", "value": "--package-only"},
                {"label": "Run Tests", "value": "--run-tests"},
                {"label": "Run Coverage", "value": "--run-coverage"}
            ]
        }
    ],
    "tasks": [
        {
            "label": "Build Project",
            "type": "process",
            "command": "python",
            "args": [
                "${workspaceFolder}/build.py",
                "--preset",
                "${input:buildType}",
                "${input:buildOptions}"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "Build Default",
            "type": "process",
